
<div class="section">
  <h3>Listing contacts</h3>

	<ul>
<% for contact in @contacts %>
		<li>
		  <%= link_to contact.firstname, contact %> 
		   | 
		  <%= link_to 'Edit', edit_contact_path(contact) %> 
		   | 
		  <%= link_to 'Destroy', contact, :confirm => 'Are you sure?', :method => :delete %>
		</li>
<% end %>
	</ul>

  <%= button_to 'New contact', new_contact_path %>

</div>


